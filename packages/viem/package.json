{
    "name": "@cartesi/viem",
    "description": "Cartesi viem extension",
    "version": "2.0.0-alpha.0",
    "dependencies": {
        "@cartesi/rpc": "workspace:*",
        "p-retry": "^6.2.1",
        "viem": "^2.26.0"
    },
    "devDependencies": {
        "@cartesi/rollups": "^2.0.0-rc.17",
        "@types/node": "^22.5.0",
        "@usecannon/cli": "^2.21.5",
        "@wagmi/cli": "^2.1.15",
        "npm-run-all": "^4.1.5",
        "ts-node": "^10.9.2",
        "tsup": "^8.2.4",
        "typescript": "^5.5.3",
        "vitest": "^3.1.1"
    },
    "type": "module",
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": {
                "types": "./dist/index.d.ts",
                "import": "./dist/index.js"
            },
            "require": {
                "types": "./dist/index.d.cts",
                "require": "./dist/index.cjs"
            }
        },
        "./actions": {
            "import": {
                "types": "./dist/actions/index.d.ts",
                "import": "./dist/actions/index.js"
            },
            "require": {
                "types": "./dist/actions/index.d.cts",
                "require": "./dist/actions/index.cjs"
            }
        },
        "./abi": {
            "import": {
                "types": "./dist/rollups.d.ts",
                "import": "./dist/rollups.js"
            },
            "require": {
                "types": "./dist/rollups.d.cts",
                "require": "./dist/rollups.cjs"
            }
        }
    },
    "peerDependencies": {
        "viem": "^2.0.0"
    },
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "build": "run-s codegen compile",
        "codegen": "run-s codegen:cannon codegen:wagmi",
        "codegen:cannon": "cannon inspect cartesi-rollups:2.0.0-rc.17 --write-deployments ./deployment",
        "codegen:wagmi": "wagmi generate",
        "compile": "tsup",
        "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
        "dev": "tsup --watch",
        "lint": "eslint",
        "prepack": "run-s build"
    }
}
