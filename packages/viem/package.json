{
    "name": "@cartesi/viem",
    "description": "Cartesi viem extension",
    "version": "2.0.0-alpha.13",
    "dependencies": {
        "@cartesi/rpc": "workspace:*",
        "abitype": "^1.0.8",
        "p-retry": "^6.2.1"
    },
    "devDependencies": {
        "@biomejs/biome": "catalog:",
        "@cartesi/rollups": "^2.0.1",
        "@types/node": "catalog:",
        "@usecannon/cli": "catalog:",
        "@wagmi/cli": "^2.3.2",
        "npm-run-all": "^4.1.5",
        "ts-node": "^10.9.2",
        "tsdown": "catalog:",
        "typescript": "catalog:",
        "vitest": "^3.2.4"
    },
    "type": "module",
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": {
                "types": "./dist/index.d.ts",
                "import": "./dist/index.js"
            },
            "require": {
                "types": "./dist/index.d.cts",
                "require": "./dist/index.cjs"
            }
        },
        "./abi": {
            "import": {
                "types": "./dist/rollups.d.ts",
                "import": "./dist/rollups.js"
            },
            "require": {
                "types": "./dist/rollups.d.cts",
                "require": "./dist/rollups.cjs"
            }
        },
        "./actions": {
            "import": {
                "types": "./dist/actions/index.d.ts",
                "import": "./dist/actions/index.js"
            },
            "require": {
                "types": "./dist/actions/index.d.cts",
                "require": "./dist/actions/index.cjs"
            }
        },
        "./chains": {
            "import": {
                "types": "./dist/chains.d.ts",
                "import": "./dist/chains.js"
            },
            "require": {
                "types": "./dist/chains.d.cts",
                "require": "./dist/chains.cjs"
            }
        }
    },
    "files": [
        "dist/**"
    ],
    "peerDependencies": {
        "viem": "^2.0.0"
    },
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "build": "run-s codegen compile",
        "codegen": "run-s codegen:cannon codegen:wagmi",
        "codegen:cannon": "cannon inspect cartesi-rollups:2.0.0 --write-deployments ./deployment",
        "codegen:wagmi": "wagmi generate",
        "compile": "tsdown",
        "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
        "dev": "tsdown --watch",
        "lint": "biome check",
        "prepack": "run-s build",
        "test": "vitest"
    }
}
