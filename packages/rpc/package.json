{
    "name": "@cartesi/rpc",
    "version": "2.0.0-alpha.7",
    "description": "Cartesi JSON-RPC Client",
    "type": "module",
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        "import": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        },
        "require": {
            "types": "./dist/index.d.cts",
            "require": "./dist/index.cjs"
        }
    },
    "files": [
        "dist/**"
    ],
    "scripts": {
        "build": "tsup",
        "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
        "dev": "tsup --watch",
        "prepack": "run-s build"
    },
    "publishConfig": {
        "access": "public"
    },
    "dependencies": {
        "json-rpc-2.0": "^1.7.0"
    },
    "devDependencies": {
        "npm-run-all": "^4.1.5",
        "tsup": "^8.5.0",
        "typescript": "^5.8.3"
    }
}
