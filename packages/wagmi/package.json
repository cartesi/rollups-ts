{
    "name": "@cartesi/wagmi",
    "description": "Cartesi rollups react hooks",
    "version": "2.0.0-alpha.12",
    "dependencies": {
        "@cartesi/viem": "workspace:*"
    },
    "devDependencies": {
        "@cartesi/rollups": "^2.0.1",
        "@types/node": "catalog:",
        "@types/react": "catalog:",
        "@usecannon/cli": "catalog:",
        "@wagmi/cli": "^2.3.2",
        "npm-run-all": "^4.1.5",
        "ts-node": "^10.9.2",
        "tsup": "^8.5.0",
        "typescript": "catalog:"
    },
    "type": "module",
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": {
                "types": "./dist/index.d.ts",
                "import": "./dist/index.js"
            },
            "require": {
                "types": "./dist/index.d.cts",
                "require": "./dist/index.cjs"
            }
        }
    },
    "files": [
        "dist/**"
    ],
    "peerDependencies": {
        "@tanstack/react-query": "^5.0.0",
        "react": "^19.0.0",
        "viem": "^2.0.0",
        "wagmi": "^2.0.0"
    },
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "build": "run-s codegen compile",
        "codegen": "run-s codegen:cannon codegen:wagmi",
        "codegen:cannon": "cannon inspect cartesi-rollups:2.0.0 --write-deployments ./deployment",
        "codegen:wagmi": "wagmi generate",
        "compile": "tsup",
        "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
        "dev": "tsup --watch",
        "lint": "eslint",
        "prepack": "run-s build"
    }
}
